<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    local:layout_collapseMode="parallax"
    local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/toolbarToggle"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@mipmap/ic_menu" />

        <ImageView
            android:id="@+id/toolbarToggleLeft"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@mipmap/ic_search" />

        <TextView
            android:id="@+id/toolbarTitle"
            style="@style/StandardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/button_corner_white"
            android:padding="@dimen/margin_xshort"
            android:text="کجا برم؟"
            android:visibility="invisible" />
        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--android:layout_toLeftOf="@+id/toolbarToggle"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:textColor="#FFF"-->
        <!--android:gravity="center|right"-->
        <!--android:id="@+id/toolbarTitle"-->
        <!--android:textSize="19sp"-->
        <!--/>-->

    </RelativeLayout>

</android.support.v7.widget.Toolbar>