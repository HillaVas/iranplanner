<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_short"
    android:layout_marginStart="@dimen/margin_short"
    android:layout_marginTop="@dimen/margin_short"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/radius_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rowEventIv"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/emam2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/padding_short">

            <TextView
                android:id="@+id/rowEventTitleTv"
                style="@style/StandardTextGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:lines="1"
                android:text="عنوان"
                android:visibility="gone" />

            <TextView
                android:id="@+id/rowEventDateTv"
                style="@style/StandardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تاریخ برگزاری" />

            <TextView
                android:id="@+id/rowEventCityTv"
                style="@style/StandardTextGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شهرامیت" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>