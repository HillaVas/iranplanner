<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ratingPeopleHolder1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/borderLayout"
        android:paddingTop="@dimen/margin_short">

        <TextView
            android:id="@+id/txtRateName1"
            style="@style/StandardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="نظر شما چیه"
            android:translationZ="1dp" />

        <RatingBar
            android:id="@+id/ratingBar1"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRateName1"
            android:layout_centerHorizontal="true"
            android:isIndicator="false"
            android:layout_marginBottom="@dimen/margin_xshort"/>

        <com.coinpany.core.android.widget.CDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ratingBar1"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ratingPeopleHolder2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/borderLayout"
        android:paddingTop="@dimen/margin_short">

        <TextView
            android:id="@+id/txtRateName2"
            style="@style/StandardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="نظر شما چیه"
            android:translationZ="1dp" />

        <RatingBar
            android:id="@+id/ratingBar2"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRateName2"
            android:layout_centerHorizontal="true"
            android:isIndicator="false"
            android:layout_marginBottom="@dimen/margin_xshort"/>

        <com.coinpany.core.android.widget.CDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ratingBar2"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ratingPeopleHolder3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/borderLayout"
        android:paddingTop="@dimen/margin_short">

        <TextView
            android:id="@+id/txtRateName3"
            style="@style/StandardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="نظر شما چیه"
            android:translationZ="1dp" />

        <RatingBar
            android:id="@+id/ratingBar3"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRateName3"
            android:layout_centerHorizontal="true"
            android:isIndicator="false"
            android:layout_marginBottom="@dimen/margin_xshort"/>

        <com.coinpany.core.android.widget.CDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ratingBar3"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ratingPeopleHolder4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/borderLayout3"
        android:paddingTop="@dimen/margin_short">

        <TextView
            android:id="@+id/txtRateName4"
            style="@style/StandardText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="نظر شما چیه"
            android:translationZ="1dp" />

        <RatingBar
            android:id="@+id/ratingBar4"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRateName4"
            android:layout_centerHorizontal="true"
            android:isIndicator="false"
            android:layout_marginBottom="@dimen/margin_xshort"/>


        <com.coinpany.core.android.widget.CDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ratingBar4"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtNo"
            style="@style/StandardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/padding_standard"
            android:text="بیخیال"
            />

        <com.coinpany.core.android.widget.CDivider
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txtOk"
            style="@style/StandardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/padding_standard"
            android:text="ثبت" />
    </LinearLayout>

</LinearLayout>