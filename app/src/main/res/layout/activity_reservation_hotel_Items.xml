<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/card_view_itinerary"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_short">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_short">

                    <RelativeLayout
                        android:id="@+id/imageHolder"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true">

                        <ProgressBar
                            android:id="@+id/imageLoading"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:translationZ="1dp" />

                        <ImageView
                            android:id="@+id/imgItineraryListMore"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:background="@drawable/food"
                            android:scaleType="centerCrop" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="@dimen/margin_short"
                        android:layout_toLeftOf="@+id/imageHolder"
                        android:gravity="right">

                        <LinearLayout
                            android:id="@+id/cityNameHolder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/margin_short"
                            >


                            <TextView
                                android:id="@+id/itinerary_duration"
                                style="@style/StandardTextGrey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_xshort"
                                android:maxLines="1"
                                android:text="اقامت در شیراز" />

                            <ImageView
                                android:id="@+id/imageCityName"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_hotel" />


                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cityNameHolder"
                            android:id="@+id/infoReserveHolder"
                            android:layout_marginBottom="@dimen/margin_short">

                            <ImageView
                                android:id="@+id/infoDuration"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="@drawable/rectangle" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="به مدت یک شب در تاریخ 3/12/95"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/margin_short"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/infoReserveHolder">

                            <ImageView
                                android:id="@+id/ReservationBtn"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="@drawable/button_corner" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="رزرو"
                                android:layout_centerInParent="true"
                                android:textColor="@color/white_"
                                style="@style/StandardText">

                            </TextView>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/cityNameHolder1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentTop="true"                            >


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="شیراز"
                                style="@style/SmallText"
                                android:textColor="@color/blue"
                                android:id="@+id/txtCityName"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="فارس"
                                style="@style/SmallText"
                                android:textColor="@color/blue"
                                android:id="@+id/txtProvinceName"
                                />
                            <ImageView
                                android:id="@+id/imageCityName1"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_circle_blue" />
                        </LinearLayout>


                    </RelativeLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </ScrollView>
</LinearLayout>