<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="280dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="230dp">

            <RelativeLayout
                android:id="@+id/pinDotParentView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/tutBgIv"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/tutorial_circle" />

                <ImageView
                    android:id="@+id/tutLeftTopDotIv"
                    android:layout_width="@dimen/tutorial_dot_size"
                    android:layout_height="@dimen/tutorial_dot_size"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/tutorial_dot_blue" />

                <ImageView
                    android:id="@+id/tutLeftBottomDotIv"
                    android:layout_width="@dimen/tutorial_dot_size"
                    android:layout_height="@dimen/tutorial_dot_size"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="60dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/tutorial_dot_yellow" />

                <ImageView
                    android:id="@+id/tutRightTopDotIv"
                    android:layout_width="@dimen/tutorial_dot_size"
                    android:layout_height="@dimen/tutorial_dot_size"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/tutorial_dot_yellow" />

                <ImageView
                    android:id="@+id/tutCenterDotIv"
                    android:layout_width="@dimen/tutorial_dot_size"
                    android:layout_height="@dimen/tutorial_dot_size"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/tutorial_dot_blue"
                    android:translationX="10dp" />

                <ImageView
                    android:id="@+id/tutRightBottomDotIv"
                    android:layout_width="@dimen/tutorial_dot_size"
                    android:layout_height="@dimen/tutorial_dot_size"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="52dp"
                    android:layout_marginEnd="34dp"
                    android:src="@drawable/tutorial_dot_yellow" />

                <ImageView
                    android:id="@+id/tutPinLeft"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/tutLeftTopDotIv"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="25dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_tutorial_pin" />

                <ImageView
                    android:id="@+id/tutPicCenter"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginTop="30dp"
                    android:layout_toStartOf="@id/tutRightTopDotIv"
                    android:padding="2dp"
                    android:src="@drawable/ic_tutorial_pin" />

                <ImageView
                    android:id="@+id/tutPinRight"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="60dp"
                    android:layout_toEndOf="@id/tutCenterDotIv"
                    android:padding="2dp"
                    android:src="@drawable/ic_tutorial_pin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tutWholeVanRl"
                android:layout_width="140dp"
                android:layout_height="96dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/tutVanIv"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_tutorial_van" />

                <ImageView
                    android:id="@+id/tutLeftWheelIv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="22dp"
                    android:src="@drawable/ic_tutorial_wheel" />

                <ImageView
                    android:id="@+id/tutRightWheelIv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/ic_tutorial_wheel" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="ok!" />

</RelativeLayout>