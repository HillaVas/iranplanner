<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".ui.fragment.showAttractionList.ShowAttractionListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reservationListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider" />

    <!--<include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_blue"
        app:layout_collapseMode="pin"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/AppTheme.PopupOverlay">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/changeDateTimeHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:id="@+id/selectHoldetTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/TypeAttractionHolder1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:translationZ="1dp">

                <RelativeLayout
                    android:id="@+id/holderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_short">

                    <TextView
                        android:id="@+id/txtTypeHote"
                        style="@style/StandardTextGrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_short"
                        android:layout_toEndOf="@+id/imageTypeHote"
                        android:text="تاریخ" />

                    <ImageView
                        android:id="@+id/imageTypeHote"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/calendar" />

                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/greySemilight" />

            <RelativeLayout
                android:id="@+id/TypeAttractionHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:translationZ="1dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/margin_standard"
                    android:padding="@dimen/margin_short">

                    <TextView
                        android:id="@+id/txtDurationHotel"
                        style="@style/StandardTextGrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_short"
                        android:layout_toEndOf="@+id/imageTypeHotel"
                        android:text="duration" />

                    <ImageView
                        android:id="@+id/imageTypeHotel"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/duration" />

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <!--  <View
              android:id="@id/divider"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_below="@id/selectHoldetTop"
              android:background="@color/light_blue" />-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/changeDateTimeHolder"
        android:background="@color/greyLight" />

    <View
        android:id="@+id/toolbarFeatureElevation"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/divider"
        android:background="@drawable/toolbar_elevation" />
</RelativeLayout>
