<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:descendantFocusability="blocksDescendants"
        android:layoutDirection="rtl">

        <RelativeLayout
            android:id="@+id/SelectHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/selectHoldetTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/TypeHotelHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_short"
                    android:layout_marginTop="@dimen/margin_short"
                    android:layout_weight="1"
                    android:translationZ="1dp">

                    <ImageView
                        android:id="@+id/imageTypeHotel"
                        android:layout_width="@dimen/height35"
                        android:layout_height="@dimen/height35"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_bed" />

                    <TextView
                        android:id="@+id/attractionType"
                        style="@style/StandardText14grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageTypeHotel"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/margin_xshort"
                        android:text="@string/accomodation" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greySemilight" />

                <RelativeLayout
                    android:id="@+id/overlapImageHolder2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_short"
                    android:layout_marginTop="@dimen/margin_short"
                    android:layout_weight="1"
                    android:translationZ="1dp">

                    <ImageView
                        android:id="@+id/imageTypeAttraction"
                        android:layout_width="@dimen/height35"
                        android:layout_height="@dimen/height35"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/calendar" />

                    <TextView
                        android:id="@+id/txtTypeHotel"
                        style="@style/StandardText14grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageTypeAttraction"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/margin_xshort"
                        android:text="@string/events" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/selectHoldetTop"
                android:background="@color/greySemilight" />

            <LinearLayout
                android:id="@+id/hj2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/overlapImageItineraryHolder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_short"
                    android:layout_marginTop="@dimen/margin_short"
                    android:layout_weight="1"
                    android:translationZ="1dp">

                    <ImageView
                        android:id="@+id/imageTypeItinerary"
                        android:layout_width="@dimen/height35"
                        android:layout_height="@dimen/height35"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_itinerary_blue"
                        android:tint="@color/main_blue" />

                    <TextView
                        android:id="@+id/ItineraryType"
                        style="@style/StandardText14grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageTypeItinerary"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/margin_xshort"
                        android:text="@string/itinerary" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greySemilight" />

                <RelativeLayout
                    android:id="@+id/TypeAttractionHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:translationZ="1dp">

                    <ImageView
                        android:id="@+id/imageTypeAttraction1"
                        android:layout_width="@dimen/height35"
                        android:layout_height="@dimen/height35"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_attraction_blue" />

                    <TextView
                        android:id="@+id/attractionType1"
                        style="@style/StandardText14grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageTypeAttraction1"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/margin_xshort"
                        android:text="@string/attraction" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/efed"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/hj2"
                android:background="@color/greySemilight" />
        </RelativeLayout>
        <!--viewPagerEventsHolder-->

        <LinearLayout
            android:id="@+id/viewPagerEventsHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itineraryHomeHolder"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_standard"
            android:paddingLeft="@dimen/padding_standard"
            android:paddingRight="@dimen/padding_standard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtEventsTitle"
                    style="@style/StandardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/margin_short"
                    android:gravity="center"
                    android:paddingTop="@dimen/padding_standard"
                    android:text="@string/events" />

                <TextView
                    android:id="@+id/tvEventShowAll"
                    style="@style/SmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/margin_short"
                    android:gravity="center"
                    android:paddingTop="@dimen/padding_standard"
                    android:text="@string/more_event"
                    android:textColor="@color/main_blue" />

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_event_height"
                android:layout_below="@+id/txtEventsTitle"
                android:layout_margin="@dimen/margin_xshort"
                app:cardCornerRadius="@dimen/corner_radius">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:layoutDirection="ltr">

                    <com.iranplanner.tourism.iranplanner.standard.ClickableViewPager
                        android:id="@+id/EventsViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1" />

                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <!--hotelsTypeHolder-->
        <RelativeLayout
            android:id="@+id/hotelsTypeHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewPagerEventsHolder"
            android:padding="@dimen/padding_standard"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtHotelTypeTitles"
                style="@style/StandardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin_short"
                android:text="@string/home_title_hotel_cat" />

            <LinearLayout
                android:id="@+id/linearEventsHolderTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_hotel_cat_height"
                android:layout_below="@+id/txtHotelTypeTitles"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/hotelHolderGrouping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xxshort"
                    android:layout_weight="1">

                    <TextView
                        style="@style/StandardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/hotel"
                        android:textColor="@color/white_"
                        android:translationZ="1dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/hotel_home"
                        android:scaleType="fitXY" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/hotelَAppartementHolderGrouping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xxshort"
                    android:layout_weight="1">

                    <TextView
                        style="@style/StandardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="هتل آپارتمان"
                        android:textColor="@color/white_"
                        android:translationZ="1dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/aparteman"
                        android:scaleType="fitXY" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearEventsHolderBottom"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/linearEventsHolderTop"
                android:layout_marginTop="@dimen/margin_xshort"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/hotelBoomgardiHolderGrouping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xxshort"
                    android:layout_weight="1">

                    <TextView
                        style="@style/StandardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/eco_hotel"
                        android:textColor="@color/white_"
                        android:translationZ="1dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/boomgardi"
                        android:scaleType="fitXY" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/hotelTraditionalHolderGrouping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xxshort"
                    android:layout_weight="1">

                    <TextView
                        style="@style/StandardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/traditional_hotel"
                        android:textColor="@color/white_"
                        android:translationZ="1dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sonati"
                        android:scaleType="fitXY" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <!--HotelBestHolder-->
        <RelativeLayout
            android:id="@+id/viewPagerBestHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotelsTypeHolder"
            android:padding="@dimen/padding_standard">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerBestHotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtBestTitleHotel"
                android:focusable="false" />

            <!--<TextView-->
            <!--android:id="@+id/txtBestTitleHotel"-->
            <!--style="@style/StandardTitle"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:text="اقامتگاه های پربازدید" />-->

            <!--<TextView-->
            <!--android:id="@+id/txtBestTitleHotسel"-->
            <!--style="@style/StandardTitle"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_marginBottom="@dimen/margin_short"-->
            <!--android:text="اقامتگاه های پربازدید"-->
            <!--android:paddingTop="@dimen/padding_standard"/>-->
            <TextView
                android:id="@+id/txtBestTitleHotel"
                style="@style/StandardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin_short"
                android:text="@string/most_visited_hotel" />

            <TextView
                android:id="@+id/txtMoreTitleHotel"
                style="@style/SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="@string/more_hotel"
                android:textColor="@color/main_blue" />
        </RelativeLayout>

        <!--attractionTypeHolder-->
        <RelativeLayout
            android:id="@+id/attracttionTypeHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SelectHolder"

            android:padding="@dimen/padding_standard"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtAttracttionTypeTitles"
                style="@style/StandardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin_short"
                android:text="@string/attraction_cat" />

            <LinearLayout
                android:id="@+id/linearAttractionHolderTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAttracttionTypeTitles"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/attractionNaturalHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:translationZ="1dp">

                        <ImageView
                            android:id="@+id/imageAttractionNatural"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignStart="@+id/txtAttractionNatural"
                            android:paddingTop="@dimen/padding_short"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_attraction_nature" />

                        <TextView
                            android:id="@+id/txtAttractionNatural"
                            style="@style/StandardTextGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageAttractionNatural"
                            android:layout_centerHorizontal="true"
                            android:padding="@dimen/margin_xshort"
                            android:text="@string/nature" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/attractionHistoricalHolder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:translationZ="1dp">

                        <ImageView
                            android:id="@+id/imagetxtAttractionHistorical"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="@dimen/padding_short"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_attraction_historical" />

                        <TextView
                            android:id="@+id/txtAttractionHistorical"
                            style="@style/StandardTextGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imagetxtAttractionHistorical"
                            android:layout_centerHorizontal="true"
                            android:padding="@dimen/margin_xshort"
                            android:text="@string/historical_cultural" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearAttractionHolderBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearAttractionHolderTop"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/attractionRelgonHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:translationZ="1dp">

                        <ImageView
                            android:id="@+id/imageAttractionRelgon"
                            android:layout_width="@dimen/height35"
                            android:layout_height="@dimen/height35"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="@dimen/padding_short"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_attraction_religious" />

                        <TextView
                            android:id="@+id/txtAttractionRelgon"
                            style="@style/StandardTextGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageAttractionRelgon"
                            android:layout_centerHorizontal="true"
                            android:padding="@dimen/margin_xshort"
                            android:text="@string/religious" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_xxshort"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/attractionSportHolder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:translationZ="1dp">

                        <ImageView
                            android:id="@+id/imagetxtAttractionSport"
                            android:layout_width="55dp"
                            android:layout_height="@dimen/height35"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="@dimen/padding_short"
                            android:src="@drawable/ic_attraction_sport" />

                        <TextView
                            android:id="@+id/txtAttractionSport"
                            style="@style/StandardTextGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imagetxtAttractionSport"
                            android:layout_centerHorizontal="true"
                            android:padding="@dimen/margin_xshort"
                            android:text="@string/sport" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

        <!--viewPagerAttractionَBestHolder-->
        <RelativeLayout
            android:id="@+id/bestAttractionHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/attracttionTypeHolder"
            android:padding="@dimen/padding_standard"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerBestAttraction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAttractionBestTitle"
                android:focusable="false" />

            <TextView
                android:id="@+id/txtAttractionBestTitle"
                style="@style/StandardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin_short"
                android:text="@string/attraction" />

            <TextView
                android:id="@+id/txtMoreTitleAttraction"
                style="@style/SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="@string/more_attraction"
                android:textColor="@color/main_blue" />
        </RelativeLayout>

        <!--ItineraryHolder-->

        <!--viewPagerAttractionَBestHolder-->
        <RelativeLayout
            android:id="@+id/bestRestaurantHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bestAttractionHolder"
            android:padding="@dimen/padding_standard"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerBestRestaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtBestRestaurantTitle"
                android:focusable="false" />

            <TextView
                android:id="@+id/txtBestRestaurantTitle"
                style="@style/StandardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin_short"
                android:text="رستوران" />

            <TextView
                android:id="@+id/txtMoreTitleBestRestaurant"
                style="@style/SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="رستوران های بیشتر"
                android:textColor="@color/main_blue" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/itineraryHomeHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bestRestaurantHolder"
            android:padding="@dimen/padding_standard"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerItinerary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtItineraryTitle"
                android:focusable="false" />

            <TextView
                android:id="@+id/txtItineraryTitle"
                style="@style/StandardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin_short"
                android:text="@string/itinerary" />

        </RelativeLayout>
        <!--ItineraryHolder-->
        <RelativeLayout
            android:id="@+id/localFoodHomeHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewPagerBestHolder"

            android:padding="@dimen/padding_standard"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerLocalFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtlocalFoodTitle"
                android:focusable="false" />

            <TextView
                android:id="@+id/txtlocalFoodTitle"
                style="@style/StandardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin_short"
                android:text="@string/local_food" />

        </RelativeLayout>
        <!--souvenirHolder-->
        <RelativeLayout
            android:id="@+id/souvenirHomeHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/localFoodHomeHolder"
            android:padding="@dimen/padding_standard"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerSouvenir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSouvenirTitle" />

            <TextView
                android:id="@+id/txtSouvenirTitle"
                style="@style/StandardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin_short"
                android:text="@string/souvenir" />
        </RelativeLayout>

        <!--cityHolder-->
        <RelativeLayout
            android:id="@+id/cityHomeHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/souvenirHomeHolder"
            android:padding="@dimen/padding_standard"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCityrTitle" />

            <TextView
                android:id="@+id/txtCityrTitle"
                style="@style/StandardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin_short"
                android:text="@string/near_city" />
        </RelativeLayout>
        <!--listProvince-->
        <RelativeLayout
            android:id="@+id/provinceHomeHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cityHomeHolder"
            android:padding="@dimen/padding_standard"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewProvinceShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtProvinceTitle" />


            <TextView
                android:id="@+id/txtProvinceTitle"
                style="@style/StandardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin_short"
                android:text="@string/provineList" />
        </RelativeLayout>
    </RelativeLayout>

