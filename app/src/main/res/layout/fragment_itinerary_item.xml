<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_standard">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_itinerary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/margin_short">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/imageHolder"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">

                        <ImageView
                            android:id="@+id/imgItineraryListMore"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop" />

                        <ProgressBar
                            android:id="@+id/imageLoading"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/part2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageHolder">

                        <TextView
                            android:id="@+id/itinerary_attraction_name"
                            style="@style/StandardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/margin_standard"
                            android:gravity="right"
                            android:text="تهران شیراز" />


                        <TextView
                            android:id="@+id/itinerary_duration"
                            style="@style/StandardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/itinerary_attraction_name"
                            android:layout_marginRight="@dimen/padding_standard"
                            android:gravity="right"
                            android:maxLines="1"
                            android:text="۳ روز" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/padding_larg"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ProgressBar
                                android:id="@+id/progressMax"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_launcher" />
                            <!--android:theme="@style/CircularProgress"-->

                            <TextView
                                android:id="@+id/textTpeTravel"
                                style="@style/StandardText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_xshort"
                                android:maxLines="1"
                                android:text="فرهنگی هنری"
                                android:textColor="@color/pink" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/supplierLayoutMore"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/part2"
                        android:background="#dedddb"
                        android:paddingLeft="@dimen/padding_standard"
                        android:paddingRight="@dimen/padding_standard">

                        <TextView
                            android:id="@+id/travelTypePic"
                            style="?android:attr/smallIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop"
                            android:text="@string/icon_heart"
                            android:textColor="@color/blue" />


                        <TextView
                            android:id="@+id/itinerary_transport_name"
                            style="@style/StandardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:layout_toLeftOf="@id/travelTypePic"
                            android:maxLines="1"
                            android:text="جاده ای" />

                        <ImageView
                            android:id="@+id/travelHardPic"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignTop="@+id/travelTypePic"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/itinerary_transport_name"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher" />


                        <TextView
                            android:id="@+id/travelHard"
                            style="@style/StandardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:layout_toLeftOf="@id/travelHardPic"
                            android:maxLines="1"
                            android:text="آسان " />

                        <ImageView
                            android:id="@+id/itineraryMoreLike"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/itinerary_count_attraction"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher" />


                        <TextView
                            android:id="@+id/itinerary_count_attraction"
                            style="@style/StandardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:maxLines="1"
                            android:text="آسان " />

                        <android.support.v4.widget.ContentLoadingProgressBar
                            android:id="@+id/progressbar"
                            android:layout_width="66dp"
                            android:layout_height="66dp"
                            android:layout_below="@+id/itinerary_count_attraction" />
                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>