            <RelativeLayout
                android:id="@+id/commentUserLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/commentMainLayout">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/commentSenderPic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/avatar"
                    app:civ_border_color="#CCCC"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/commentSentTime"
                    style="@style/SmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="start"
                    android:maxLines="1"


                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/commentSenderPic"
                    android:background="@color/greyLight"></RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/commentSenderPic"
                    android:layout_toStartOf="@id/commentSentTime"
                    >

                    <TextView

                        android:id="@+id/commentSenderName"
                        style="@style/StandardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:maxLines="1"
                        android:text="hoda" />

                    <TextView
                        android:id="@+id/email_sender"
                        style="@style/SmallText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/commentSenderName"
                        android:layout_below="@id/commentSenderName"
                        android:maxLines="1"
                        android:text="@string/vahidimehr_gmail_com"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/commentMainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_below="@+id/commentUserLayout">

                <TextView
                    android:id="@+id/commentText"
                    style="@style/StandardText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_short"
                    android:layout_marginStart="@dimen/margin_short"
                    android:layout_marginTop="@dimen/margin_short"
                    android:textColor="#000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/commentText"
                    android:layout_margin="@dimen/margin_short"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/replyBtn"
                        style="@style/StandardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/button_corner_blue_stroke"
                        android:gravity="center"
                        android:padding="@dimen/margin_short"
                        android:text="@string/replay"
                        android:textColor="@color/main_blue" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/ic_comment_like"
                        android:contentDescription="TODO"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/textView"
                        style="@style/SmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/replyBtn"
                        android:layout_alignBottom="@+id/replyBtn"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageButton"
                        android:text="@string/_12"
                        android:textSize="9sp"
                        android:visibility="invisible"/>

                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/replyUserMainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical" />

        <ViewSwitcher
            android:id="@+id/viewSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end" />

    </LinearLayout>


</android.support.v7.widget.CardView>