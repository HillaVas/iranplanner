<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="3dp"
    >



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:background="@color/greyLight"
        >

        <RelativeLayout
            android:id="@+id/replyUserLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background_normal"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <RelativeLayout
                android:id="@+id/commentUserLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/commentMainLayout"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/commentSenderPic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_google"
                    app:civ_border_color="#CCCC"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/commentSentTime"
                    style="@style/SmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="1 ساعت"

                    android:textSize="12sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greyLight"
                    android:layout_below="@+id/commentSenderPic"></RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toEndOf="@id/commentSenderPic"
                    android:layout_toStartOf="@id/commentSentTime"
                    android:gravity="right">

                    <TextView

                        android:id="@+id/commentSenderName"
                        style="@style/StandardTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="نام" />

                    <TextView
                        android:id="@+id/email_sender"
                        style="@style/SmallText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/commentSenderName"
                        android:layout_below="@id/commentSenderName"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="vahidimehr@gmail.com"
                        android:textSize="12sp"
                        android:visibility="gone"/>
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/commentMainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_below="@+id/commentUserLayout"
              >

                <TextView
                    android:id="@+id/commentText"
                    style="@style/StandardText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_short"
                    android:layout_marginRight="@dimen/margin_short"
                    android:layout_marginTop="@dimen/margin_short"
                    android:gravity="right"
                    android:text="test"
                    android:textColor="#000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/commentText"
                    android:layout_margin="@dimen/margin_short"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/replyBtn"
                        style="@style/StandardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:padding="@dimen/margin_short"
                        android:text="پاسخ"
                        android:textColor="@color/main_blue"

                        android:background="@drawable/button_corner_blue_stroke"
                        />

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:background="@mipmap/ic_comment_like"
                        android:id="@+id/imageButton"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/textView"
                        style="@style/SmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/replyBtn"
                        android:layout_alignBottom="@+id/replyBtn"
                        android:layout_toEndOf="@+id/imageButton"
                        android:text="12 نفر پسندیدند"
                        android:textSize="9sp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/replyUserMainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
          />

        <ViewSwitcher
            android:id="@+id/viewSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
      />

    </LinearLayout>


</android.support.v7.widget.CardView>