<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iranplanner.tourism.iranplanner.fragment.AttractionDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_itinerary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageAttraction"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:id="@+id/supplierLayoutMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageAttraction"
                        android:background="@color/transparent_grey"
                        android:padding="@dimen/margin_short"       >

                        <TextView
                            android:id="@+id/attractionName"
                            style="@style/StandardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/margin_short"
                            android:maxLines="1"
                            android:text="دروازه شمیران"
                            android:textColor="#fdfdfb" />

                        <TextView
                            android:id="@+id/attractionPlace"
                            style="@style/StandardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/attractionName"
                            android:layout_below="@+id/attractionName"
                            android:layout_marginBottom="@dimen/margin_short"
                            android:text="تهران استان تهران"
                            android:textColor="@color/blue" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/supplierLayoutTravelType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/supplierLayoutMore"
                        android:paddingLeft="@dimen/padding_standard"
                        android:paddingRight="@dimen/padding_standard">

                        <LinearLayout
                            android:id="@+id/cityNameHolder1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/cityNameHolder"
                            android:layout_below="@+id/cityNameHolder"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/padding_short">

                            <TextView
                                android:id="@+id/textEntranceFee"
                                style="@style/StandardText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:maxLines="1"
                                android:text="textCityName" />

                            <ImageView
                                android:id="@+id/imageCityName1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_launcher" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cityNameHolder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/margin_short">

                            <TextView
                                android:id="@+id/textTimeDuration"
                                style="@style/StandardText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:maxLines="1"
                                android:text="textCityName" />

                            <ImageView
                                android:id="@+id/imageCityName"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_launcher" />


                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout

                        android:id="@+id/overlapImageHolder"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_above="@id/supplierLayoutTravelType"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="-55dp"
                        android:layout_marginLeft="24dp"
                        android:adjustViewBounds="true">


                        <ImageView
                            android:id="@+id/imageTypeAttraction"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/circle_stroke" />

                        <TextView
                            android:id="@+id/attractionType"
                            style="@style/StandardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageTypeAttraction"
                            android:layout_centerHorizontal="true"
                            android:padding="5dp"
                            android:text="تاریخی فرهنگی" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/mapHolder"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_below="@+id/part3"
                        android:background="@color/greyLight"
                        android:focusableInTouchMode="true">

                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusableInTouchMode="true"
                            tools:context="com.iranplanner.tourism.iranplanner.MapsActivity"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mapHolder">

                        <TextView
                            android:id="@+id/textBody"
                            style="@style/StandardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_standard"
                            android:text="@string/title_section1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/part3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/supplierLayoutTravelType">


                        <Button
                            android:id="@+id/showItinerys1"
                            style="@style/StandardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:padding="@dimen/padding_short"
                            android:text="جدول ساعات بازدید" />

                        <Button
                            android:id="@+id/showItinerys"
                            style="@style/StandardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="#1f7845"
                            android:padding="@dimen/padding_short"
                            android:text="باز است" />
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
