                        <TextView
                            style="@style/StandardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/itinerary_name1"
                            android:layout_below="@+id/itinerary_name1"

                            android:text="تهران استان تهران"
                            android:textColor="@color/blue" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/supplierLayoutTravelType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/supplierLayoutMore"
                        android:background="@color/blue"
                        android:paddingLeft="@dimen/padding_standard"
                        android:paddingRight="@dimen/padding_standard">

                        <LinearLayout
                            android:id="@+id/cityNameHolder1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/cityNameHolder"
                            android:layout_below="@+id/cityNameHolder"
                            android:gravity="right"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/textCityName1"
                                style="@style/StandardText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:maxLines="1"
                                android:text="textCityName" />

                            <ImageView
                                android:id="@+id/imageCityName1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_launcher" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cityNameHolder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"

                            android:gravity="right"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/textCityName"
                                style="@style/StandardText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:maxLines="1"
                                android:text="textCityName" />

                            <ImageView
                                android:id="@+id/imageCityName"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="5dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_launcher"

                                />


                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
