                            <Button
                                android:id="@+id/ordibehesht"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="@dimen/padding_big"
                                android:background="@drawable/circle_tohi" />

                            <Button
                                android:id="@+id/khordad"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/padding_big"
                                android:layout_toLeftOf="@+id/ordibehesht"
                                android:background="@drawable/circle_tohi" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/winterHolder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/fallHolder">

                            <Button
                                android:id="@+id/dey"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/padding_big"
                                android:layout_toRightOf="@+id/bahman"
                                android:background="@drawable/circle_tohi" />

                            <Button
                                android:id="@+id/bahman"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="@dimen/padding_big"
                                android:background="@drawable/circle_tohi" />

                            <Button
                                android:id="@+id/esfand"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/padding_big"
                                android:layout_marginRight="@dimen/padding_big"
                                android:layout_toLeftOf="@+id/bahman"
                                android:background="@drawable/circle_tohi" />

                            <TextView
                                android:id="@+id/winter"
                                style="@style/StandardTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/esfand"
                                android:paddingBottom="@dimen/margin_standard"
                                android:paddingTop="@dimen/margin_standard"
                                android:text="زمستان" />
