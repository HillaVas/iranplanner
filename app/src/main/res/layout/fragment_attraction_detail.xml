                        <RelativeLayout
                            android:id="@+id/summerHolder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/springHolder">

                            <Button
                                android:id="@+id/tir"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/padding_big"
                                android:layout_toRightOf="@+id/mordad"
                                android:background="@drawable/circle_tohi" />
                            <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="تیر"-->
                            <!--android:layout_below="@id/tir"-->
                            <!--android:layout_alignRight="@id/tir"/>-->

                            <Button
                                android:id="@+id/mordad"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="@dimen/padding_big"
                                android:background="@drawable/circle_tohi" />
                            <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
