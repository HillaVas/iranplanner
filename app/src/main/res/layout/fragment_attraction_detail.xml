                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/part3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/supplierLayoutTravelType"
                        android:padding="@dimen/margin_standard">


                        <Button
                            android:id="@+id/showItinerys1"
                            style="@style/StandardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@color/blue"
                            android:padding="@dimen/padding_short"
                            android:text="جدول ساعات بازدید"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <Button
                            android:id="@+id/showItinerys"
                            style="@style/StandardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="#1f7845"
                            android:padding="@dimen/padding_short"
                            android:text="باز است"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
