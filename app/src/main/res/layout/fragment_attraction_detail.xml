                                    android:id="@+id/aban"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/circle_tohi"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_launcher" />

                                <TextView

                                    style="@style/StandardText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:paddingBottom="@dimen/padding_short"
                                    android:text="آبان" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/mehrHolder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="@dimen/padding_big"
                                android:layout_toRightOf="@+id/abanHolder"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/padding_short">

                                <Button
                                    android:id="@+id/mehr"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/circle_tohi"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_launcher" />

                                <TextView
                                    style="@style/StandardText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:maxLines="1"
                                    android:text="مهر" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/azarHolder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="@dimen/padding_big"
                                android:layout_toLeftOf="@+id/abanHolder"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/padding_short">

                                <Button
                                    android:id="@+id/azar"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/circle_tohi"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_launcher" />

                                <TextView
                                    style="@style/StandardText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:maxLines="1"
                                    android:text="آذر" />
                            </LinearLayout>

                        </RelativeLayout>
                        <!--<RelativeLayout
                            android:id="@+id/fallHolder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/summerHolder">-->


                        <!--<TextView-->
                        <!--android:id="@+id/fall"-->
                        <!--style="@style/StandardTitle"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_toRightOf="@+id/mehrHolder"-->
                        <!--android:paddingBottom="@dimen/margin_standard"-->
                        <!--android:paddingTop="@dimen/margin_standard"-->
                        <!--android:text="پاییز" />-->

                        <!--<Button-->
                        <!--android:id="@+id/mehrHolder"-->
                        <!--android:layout_width="20dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginRight="@dimen/padding_big"-->
