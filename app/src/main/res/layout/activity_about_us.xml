<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iranplanner.tourism.iranplanner.ui.navigationDrawer.AboutUsActivity"
    tools:ignore="MissingPrefix">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_blue"
        android:elevation="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/StandardText"
                fontPath="fonts/iransans-black.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_short"
                android:paddingTop="@dimen/padding_standard"
                android:text="ایران پلنر"
                android:textSize="19dp" />

            <TextView
                style="@style/StandardText"
                fontPath="fonts/iransans-black.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_short"
                android:text="سامانه جامع برنامه ریزی سفر در ایران"
                android:textSize="16dp" />

            <TextView
                style="@style/StandardText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_short"
                android:text="www.iranplanner.com" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/aboutUsTelegramIv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp"
                    android:src="@drawable/logo_telegram" />

                <ImageView
                    android:id="@+id/aboutUsInstagramIv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/logo_instagram" />

                <ImageView
                    android:id="@+id/aboutUsLinkedInIv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp"
                    android:src="@drawable/logo_linkedin" />
            </LinearLayout>

            <TextView
                android:id="@+id/aboutUsDescTv"
                style="@style/StandardText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_standard"
                android:text="@string/dummy" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>