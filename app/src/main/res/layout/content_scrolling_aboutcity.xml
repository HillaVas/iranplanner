<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.iranplanner.tourism.iranplanner.ui.activity.ScrollingActivity1"
    android:background="?android:attr/colorBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:text="داستان این شهر"
            android:layout_alignParentRight="true"
            android:id="@+id/title"
            style="@style/StandardTitle"/>
        <RelativeLayout
            android:id="@+id/webBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title"
            android:gravity="right">

            <com.coinpany.core.android.widget.CTouchyWebView
                android:id="@+id/contentFullDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/StandardTextGrey"

                />
        </RelativeLayout>
    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
