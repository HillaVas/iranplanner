<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:baselineAligned="false"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/card_view_itinerary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_short"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:id="@+id/supplierLayoutMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageTextAttractionHolder"
                        android:layout_marginBottom="@dimen/margin_standard"
                        android:paddingLeft="@dimen/padding_standard"
                        android:paddingRight="@dimen/padding_standard">

                        <LinearLayout
                            android:id="@+id/navigateBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/padding_standard"
                            android:paddingRight="@dimen/padding_standard">

                            <ImageView
                                android:id="@+id/imageGps"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_duration_bluee" />

                            <TextView
                                android:id="@+id/textGps"
                                style="@style/SmallText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="مسیریابی" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/imageTimeOpen"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_duration_time_blue" />

                            <TextView
                                android:id="@+id/textTimeOpen"
                                style="@style/SmallText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="باز است" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/moreInfoHolder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/padding_standard"
                            android:paddingRight="@dimen/padding_standard"
                            android:background="?android:attr/selectableItemBackground">

                            <ImageView
                                android:id="@+id/imageMore"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_info_blue_new" />

                            <TextView
                                android:id="@+id/textMore"
                                style="@style/SmallText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="بیشتر" />


                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/imageTextAttractionHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="?android:attr/selectableItemBackground">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ImageAttraction"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/margin_standard"
                            android:layout_marginTop="@dimen/padding_standard"
                         />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@+id/ImageAttraction"
                            >
                            <TextView
                                android:id="@+id/itinerary_attraction_name"
                                style="@style/StandardTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_margin="@dimen/margin_standard"
                                android:gravity="right"
                                android:text="پارسه" />

                            <LinearLayout
                                android:id="@+id/cityNameHolder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/itinerary_attraction_name"
                                android:layout_below="@+id/itinerary_attraction_name"

                                android:gravity="right"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/margin_xshort"
                                >


                                <TextView
                                    android:id="@+id/textCityName"
                                    style="@style/StandardText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:maxLines="1"
                                    android:text="textCityName" />

                                <ImageView
                                    android:id="@+id/imageCityName"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_margin="5dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_pinblack" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/itinerary_attraction_name"
                                android:layout_below="@+id/cityNameHolder"
                                android:gravity="right"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/padding_short"
                               >


                                <TextView
                                    android:id="@+id/textTimeDuration"
                                    style="@style/StandardText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:maxLines="1"
                                    android:text="textTimeDuration" />

                                <ImageView
                                    android:id="@+id/imageTimeDuration"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_margin="5dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/ic_duration_time_grey" />

                            </LinearLayout>
                            </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </ScrollView>

</LinearLayout>