<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/card_view_itinerary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_short"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_short">

                    <RelativeLayout
                        android:id="@+id/imageHolder"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true">

                        <ProgressBar
                            android:id="@+id/imageLoading"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:translationZ="1dp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:src="@color/pink_shadow"
                            android:translationZ="1dp"
                            android:layout_alignRight="@+id/imgItineraryListMore"
                            android:layout_marginTop="@dimen/padding_standard"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 20%"
                            android:translationZ="2dp"
                            style="@style/SmallText"
                            android:layout_alignRight="@+id/imgItineraryListMore"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:textColor="@color/white_"
                            />

                        <ImageView
                            android:id="@+id/imgItineraryListMore"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:background="@drawable/food"
                            android:scaleType="center"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="@dimen/margin_short"
                        android:layout_toLeftOf="@+id/imageHolder"
                        android:gravity="right">


                        <TextView
                            android:id="@+id/txtHotelName"
                            style="@style/StandardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/margin_xshort"
                            android:maxLines="1"
                            android:text="هتل آپارتمان رازی" />


                        <RelativeLayout
                            android:id="@+id/infoReserveHolder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtHotelName"
                            android:layout_margin="@dimen/margin_short">

                            <ImageView
                                android:id="@+id/imgType"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_hotel" />

                            <TextView
                                android:id="@+id/txtType"
                                style="@style/SmallText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/margin_standard"
                                android:layout_toLeftOf="@+id/imgType"
                                android:text="نوع مرکز اقامت" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/starHolder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/infoReserveHolder"
                            android:layout_marginRight="@dimen/margin_short">

                            <ImageView
                                android:id="@+id/imgStar1"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="@dimen/margin_xshort"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_stars" />

                            <ImageView
                                android:id="@+id/imgStar2"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="@dimen/margin_xshort"
                                android:layout_toLeftOf="@+id/imgStar1"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_stars" />

                            <ImageView
                                android:id="@+id/imgStar3"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="@dimen/margin_xshort"
                                android:layout_toLeftOf="@+id/imgStar2"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_stars" />

                            <ImageView
                                android:id="@+id/imgStar4"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="@dimen/margin_xshort"
                                android:layout_toLeftOf="@+id/imgStar3"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_stars" />

                            <ImageView
                                android:id="@+id/imgStar5"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="@dimen/padding_short"
                                android:layout_toLeftOf="@+id/imgStar4"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_stars" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/infoReserveHolders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/starHolder"
                            android:layout_margin="@dimen/margin_short">

                            <TextView
                                android:id="@+id/txtPrice"
                                style="@style/SmallText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="شروع قیمت از" />

                            <TextView
                                android:id="@+id/txtStartPrice"
                                style="@style/SmallText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_toLeftOf="@+id/txtPrice"
                                android:layout_toStartOf="@+id/txtPrice"
                                android:text="3000" />
                        </RelativeLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/cityNameHolder1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignRight="@+id/imageHolder"
                        android:layout_below="@+id/imageHolder"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <TextView
                            android:id="@+id/txtCityName"
                            style="@style/SmallText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="شیراز"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/txtProvinceName"
                            style="@style/SmallText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="فارس"
                            android:textColor="@color/blue" />

                        <ImageView
                            android:id="@+id/imageCityName1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_circle_blue" />
                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>


    </ScrollView>
</LinearLayout>