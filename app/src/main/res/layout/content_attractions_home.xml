<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_itinerary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_xshort"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/imageLoading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:translationZ="1dp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginLeft="@dimen/margin_short"
            android:layout_marginRight="@dimen/margin_short"
            android:paddingTop="@dimen/margin_short"
            android:paddingBottom="@dimen/margin_short"
            >

            <TextView
                android:id="@+id/txtView"
                style="@style/SmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_xshort"
                android:hint="Electronics" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>