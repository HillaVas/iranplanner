<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tutMasterContainer"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/tutBoothRl"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp">

            <ImageView
                android:id="@+id/tutBoothIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_tutorial_booth" />

            <ImageView
                android:id="@+id/tutCurtainIv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_tutorial_curtain" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tutGiftRl"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_above="@+id/tutBoothRl"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-15dp">

            <ImageView
                android:id="@+id/tutGiftFeshfeshe"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_tutorial_feshfeshe" />

            <ImageView
                android:id="@+id/tutGiftBelow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_tutorial_gift_below" />

            <ImageView
                android:id="@+id/tutGiftTop"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:rotation="53"
                android:scaleX="1.7"
                android:scaleY="1.7"
                android:src="@drawable/ic_tutorial_gift_top"
                android:translationY="30dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tutContainer"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/pinDotParentView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/tutBgIv"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/tutorial_circle" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tutWholeVanRl"
                android:layout_width="140dp"
                android:layout_height="96dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/tutVanIv"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_tutorial_van" />

                <ImageView
                    android:id="@+id/tutLeftWheelIv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="22dp"
                    android:src="@drawable/ic_tutorial_wheel" />

                <ImageView
                    android:id="@+id/tutRightWheelIv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/ic_tutorial_wheel" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/request_status_green_btn_selector"
        android:layout_margin="10dp"
        android:text="بریم سفر!"
        android:textColor="#f2f2f2" />

</RelativeLayout>
