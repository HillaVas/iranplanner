<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_itinerary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xxshort">

                <RelativeLayout
                    android:id="@+id/holder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/imageTextAttractionHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true">

                        <RelativeLayout
                            android:id="@+id/imageTextAttractionHolder1"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:layout_alignParentStart="true">

                            <ProgressBar
                                android:id="@+id/imageLoading"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerInParent="true"
                                android:translationZ="1dp" />

                            <ImageView
                                android:id="@+id/ImageAttraction"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="@dimen/margin_standard"
                                android:layout_marginTop="@dimen/margin_short" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayout4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/margin_short"
                            android:layout_marginTop="@dimen/padding_standard"
                            android:layout_toEndOf="@+id/imageTextAttractionHolder1"
                            android:gravity="start">

                            <RelativeLayout
                                android:id="@+id/relativeLayoutHolder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true">

                                <TextView
                                    android:id="@+id/attraction_name"
                                    style="@style/StandardTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginBottom="@dimen/margin_short"
                                    android:layout_marginLeft="@dimen/margin_standard"
                                    android:layout_marginRight="@dimen/margin_standard"
                                    android:text="پارسه" />

                                <RelativeLayout
                                    android:id="@+id/cityNameHolder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/attraction_name"
                                    android:paddingBottom="@dimen/margin_xshort">

                                    <TextView
                                        android:id="@+id/textCityName"
                                        style="@style/SmallText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toEndOf="@+id/imageCityName"
                                        android:maxLines="1"
                                        android:text="textCityName" />

                                    <ImageView
                                        android:id="@+id/imageCityName"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignTop="@+id/textCityName"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:scaleType="centerCrop"
                                        android:src="@mipmap/ic_pinblack" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/cityNameHolderz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/cityNameHolder"
                                    android:paddingBottom="@dimen/margin_xshort">

                                    <TextView
                                        android:id="@+id/textTimeDuration"
                                        style="@style/SmallText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toEndOf="@+id/imageTimeDuration"
                                        android:maxLines="1"
                                        android:text="textCityName" />

                                    <ImageView
                                        android:id="@+id/imageTimeDuration"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:scaleType="centerCrop"
                                        android:src="@mipmap/ic_duration_time_grey" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/typeAttractionHolder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/cityNameHolderz"
                                    android:paddingBottom="@dimen/margin_xshort">

                                    <TextView
                                        android:id="@+id/textType"
                                        style="@style/SmallText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toEndOf="@+id/imageype"
                                        android:maxLines="1"
                                        android:text="txtType" />

                                    <ImageView
                                        android:id="@+id/imageype"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:scaleType="centerCrop"
                                        android:src="@mipmap/ic_duration_time_grey" />

                                </RelativeLayout>
                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/supplierLayoutBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/imageTextAttractionHolder"
                        android:paddingLeft="@dimen/margin_standard"
                        android:paddingRight="@dimen/margin_standard">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/margin_short"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_xshort"
                            android:weightSum="2">

                            <Button
                                android:id="@+id/navigateBtn"
                                style="@style/StandardText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/margin_xxxshort"
                                android:layout_weight="1"
                                android:background="@drawable/button_corner_grey_dark_stroke"
                                android:text="مسیریابی"
                                android:textColor="@color/dark_blue" />

                            <Button
                                android:id="@+id/moreInfoHolder"
                                style="@style/StandardText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/button_corner_grey_dark_stroke"
                                android:text="اطلاعات بیشتر"
                                android:textColor="@color/dark_blue" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>