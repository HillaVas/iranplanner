<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <android.support.v7.widget.CardView
        android:id="@+id/itinarary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/person_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/emam2"
                 />

            <TextView
                android:id="@+id/city_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_standard"
                android:paddingRight="@dimen/padding_standard"
                android:gravity="right"
                style="@style/StandardTitle"
                android:text="تهران کاشان "
                android:layout_below="@id/person_photo"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <RelativeLayout
                android:id="@+id/supplierLayoutMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_city"
                android:paddingRight="@dimen/padding_standard">

                <ImageView
                    android:id="@+id/supplierProfilePic"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />




                <TextView
                    android:id="@+id/supplierName"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@id/supplierProfilePic"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="سه روز" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
