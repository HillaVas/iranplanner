<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_itineraryq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"

      >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_short"
            android:background="@color/greenlight">

            <TextView
                android:id="@+id/roomType1"
                style="@style/StandardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin_short"
                android:maxLines="1"
                android:text="پیش فاکتور" />

            <LinearLayout
                android:id="@+id/changeDateTimeHolder1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roomType1"
                android:background="@drawable/corner_layout"
                android:orientation="vertical"
                android:padding="@dimen/padding_short">

                <RelativeLayout
                    android:id="@+id/holderDatea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_short">

                    <TextView
                        android:id="@+id/txtdateReservea"
                        style="@style/StandardTextGrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_short"
                        android:layout_toEndOf="@+id/imageTypeHote"
                        android:text="3000 تومان" />

                    <TextView
                        android:id="@+id/imageTypeHotea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="مجموع مبلغ نهایی" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/holderDatea1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_short">

                    <TextView
                        android:id="@+id/txtdateReservea1"
                        style="@style/StandardTextGrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_short"
                        android:layout_toEndOf="@+id/imageTypeHote"
                        android:text="20 تومان"
                        android:textColor="@color/dark_red" />

                    <TextView
                        android:id="@+id/imageTypeHotea1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="مجموع تخفیف های شما"
                        android:textColor="@color/dark_red" />


                </RelativeLayout>

                <TextView
                    style="@style/StandardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_short"
                    android:gravity="center"
                    android:text="مبلغ قابل پرداخت"
                    android:textColor="@color/green" />

                <TextView
                    style="@style/StandardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_short"
                    android:gravity="center"
                    android:text="320 هزار تومان"
                    android:textColor="@color/green" />

                <RelativeLayout
                    android:id="@+id/exitHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_short">

                    <TextView
                        android:id="@+id/exit"
                        style="@style/SmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/checkBoxNews"
                        android:text="قوانین رزرواسیون و کنسلی را قبول دارم"
                        android:textColor="@color/light_blue" />

                    <CheckBox
                        android:id="@+id/checkBoxNews"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_checked_blue" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>