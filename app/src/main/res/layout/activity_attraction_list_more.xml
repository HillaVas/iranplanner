<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.showAttractionList.ShowAttractionListFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/attractionListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/app_bar" />

    <!--This Section is Used for the Bottom Panel -->
    <LinearLayout
        android:id="@+id/hotelReservationOkHolder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonBottom"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/attractionFilterToggleView"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/drawable_right_round_corner"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="فیلتر" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attractionMapToggleView"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/drawable_left_round_corner"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="نقشه" />
        </LinearLayout>
    </LinearLayout>
    <!--End of Bottom Panel Section-->

    <View
        android:id="@+id/attractionPanelShadeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="#000" />

    <RelativeLayout
        android:id="@+id/attractionFilterView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:background="#f2f2f2">


    </RelativeLayout>

</RelativeLayout>


