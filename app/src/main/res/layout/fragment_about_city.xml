<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.mainActivity.MainActivity"
    android:background="?android:attr/colorBackground"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="6dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorBackground"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/zz"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    android:id="@+id/imgHome"
                    android:transitionName="imgHome"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/dark_shadow"
                    android:padding="@dimen/margin_standard">


                        <TextView
                            android:id="@+id/attractionName"
                            style="@style/StandardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/margin_short"
                            android:layout_marginTop="@dimen/margin_standard"
                            android:maxLines="1"
                            android:text="دروازه شمیران"
                            android:textColor="@color/white_"
                            android:layout_marginBottom="@dimen/margin_short"/>


                        <TextView
                            android:id="@+id/attractionPlace"
                            style="@style/StandardText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/attractionName"
                            android:layout_below="@+id/attractionName"
                            android:layout_marginBottom="@dimen/margin_short"
                            android:text="تهران استان تهران"
                            android:textColor="@color/white_" />




                </RelativeLayout>
                     </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>

        <RelativeLayout
            android:id="@+id/featureListRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/featureListHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_"
                android:orientation="horizontal"
                android:padding="@dimen/padding_short"
                android:visibility="gone"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/test"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_attraction" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_attraction" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_attraction" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_attraction" />

            </LinearLayout>

            <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_below="@+id/featureListHolder"-->
            <!--android:src="@color/greyLight" />-->
        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_scrolling_aboutcity" />
    <!--<include layout="@layout/content_scrolling" />-->
