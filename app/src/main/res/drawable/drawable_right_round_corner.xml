<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">

            <corners android:bottomRightRadius="40dp" android:topRightRadius="40dp" />

            <stroke android:width="1.2dp" android:color="@color/dark_blue" />

            <solid android:color="@color/dark_blue" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <corners android:bottomRightRadius="40dp" android:topRightRadius="40dp" />

            <stroke android:width="1.2dp" android:color="@color/dark_blue" />

            <solid android:color="@color/dark_blue" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <corners android:bottomRightRadius="40dp" android:topRightRadius="40dp" />

            <stroke android:width="1.2dp" android:color="@color/main_blue" />

            <solid android:color="@color/main_blue" />

        </shape>
    </item>
</selector>
