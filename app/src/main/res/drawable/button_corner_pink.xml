<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="0.1dp" android:topRightRadius="25dp"
                android:bottomLeftRadius="0.1dp" android:bottomRightRadius="25dp"/>
            <stroke android:width="2dp" android:color="@color/greyLight" />
            <gradient android:angle="-90" android:startColor="@color/pinkpress" android:endColor="@color/pinkpress"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="0.1dp" android:topRightRadius="25dp"
                android:bottomLeftRadius="0.1dp" android:bottomRightRadius="25dp"/>
            <stroke android:width="2dp" android:color="@color/pink" />
            <solid android:color="@color/greyLight"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="0.1dp" android:topRightRadius="25dp"
                android:bottomLeftRadius="0.1dp" android:bottomRightRadius="25dp"/>
            <stroke android:width="1dp" android:color="@color/pink" />
            <gradient android:angle="-90" android:startColor="@color/pink" android:endColor="@color/pink" />
        </shape>
    </item>
</selector>