<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="25dp" android:topRightRadius="25dp"
                android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp"/>
            <stroke android:width="2dp" android:color="@color/greyLight" />
            <gradient android:angle="-90" android:startColor="@color/background" android:endColor="@color/background"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="25dp" android:topRightRadius="25dp"
                android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp"/>
            <stroke android:width="2dp" android:color="@color/greyLight" />

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="25dp" android:topRightRadius="25dp"
                android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp"/>
            <stroke android:width="1dp" android:color="@color/greyLight" />
            <gradient android:angle="-90"  />
        </shape>
    </item>
</selector>